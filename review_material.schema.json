{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "materials": {
      "type": "array",
      "title": "资料列表",
      "items": {
        "type": "object",
        "properties": {
          "course": {
            "type": "string",
            "title": "课程名"
          },
          "description": {
            "type": "string",
            "title": "描述"
          },
          "file": {
            "type": "string",
            "title": "文件 URL"
          }
        },
        "required": [
          "description",
          "file"
        ]
      }
    },
    "version": {
      "type": "number",
      "title": "版本号"
    },
    "$schema": true
  },
  "required": [
    "materials",
    "version"
  ],
  "additionalProperties": false
}